# ===== WordPress =====
WP_URL=
WP_USER=
WP_APP_PASSWORD=
# true/false (SSL 검증 끌 때만 false)
WP_TLS_VERIFY=true

# ===== OpenAI =====
OPENAI_API_KEY=
# (선택) 기본/롱폼 모델명. 미설정 시 내부 기본값 사용
OPENAI_MODEL=
OPENAI_MODEL_LONG=
# 한 포스트 본문 최대 토큰(내부 일부 생성 로직에 사용될 수 있음)
MAX_TOKENS_BODY=900

# ===== Coupang Partners =====
COUPANG_ACCESS_KEY=
COUPANG_SECRET_KEY=
COUPANG_CHANNEL_ID=
COUPANG_SUBID_PREFIX=auto
# 1이면 쿠팡 API 사용, 0이면 검색 링크 폴백
REQUIRE_COUPANG_API=1

# ===== Posting / Taxonomy =====
# publish | future
POST_STATUS=future
KEYWORDS_CSV=keywords.csv
ALLOW_CREATE_TERMS=1
# 사이트에 이미 있는 카테고리(쉼표 구분)
EXISTING_CATEGORIES=뉴스,비공개,쇼핑,전체글,게시글,정보,취미

# ===== Affiliate Content =====
PRODUCTS_SEED_CSV=products_seed.csv
# 일상 포스트 기본 카테고리
DEFAULT_CATEGORY=정보
DEFAULT_TAGS=
# 쿠팡(쇼핑) 포스트 기본 카테고리
AFFILIATE_CATEGORY=쇼핑
AFFILIATE_TAGS=
# 공정문구(쿠팡 파트너스 고지). HTML로 출력됨
DISCLOSURE_TEXT=이 포스팅은 쿠팡 파트너스 활동의 일환으로, 이에 따른 일정액의 수수료를 제공합니다.

# ===== Ads (Shortcode) =====
# WP 테마/플러그인에서 정의한 내부광고 숏코드.
# 비워두면 affiliate_post.py가 자동으로 [ads_top] 을 삽입함.
AD_SHORTCODE=[ads_top]

# ===== Buttons =====
# 쿠팡 버튼 문구(상/하단 가로 2개)
BUTTON_TEXT=제품 보기
BUTTON_SHOP_TEXT=쇼핑 글 모아보기
# 이미지 사용(선택): 1/true
USE_IMAGE=

# ===== Schedules =====
# 쇼핑 포스트 기본 예약 시간(KST, HH:MM)
AFFILIATE_TIME_KST=13:00
# (워크플로에서 사용할 수 있는 추가 슬롯 목록. 스크립트 직접 사용 X)
AFFILIATE_TIMES_KST=12:00,16:00,18:00

# ===== Keywords Auto Update =====
NEWSAPI_KEY=
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=
# 한 번에 뽑을 키워드 개수 기본값
KEYWORDS_K=10
# 제외 키워드(쉼표 구분)
BAN_KEYWORDS=
BACKUP_OLD_KEYWORDS=1
USER_AGENT=gpt-blog-keywords/1.2

# ===== Cache / Logs =====
USAGE_DIR=.usage
CACHE_DIR=.cache
LLM_LOG_FILENAME=llm.log
CACHE_TTL_DEFAULT=86400
CACHE_MAX_FILES=500
CACHE_DISABLE=0

# ===== Picker switches =====
KEYWORD_PICK_MODE=
SEED_PICK_MODE=

# ===== Picker guards & fallbacks =====
PERSIST_USAGE=1
AFF_USED_BLOCK_DAYS=30
NO_REPEAT_TODAY=1
# 키워드 풀 비었을 때 폴백(쉼표 구분)
AFF_FALLBACK_KEYWORDS=휴대용 선풍기
