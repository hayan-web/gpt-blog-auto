# =========================
# WordPress
# =========================
WP_URL=
WP_USER=
WP_APP_PASSWORD=

# =========================
# OpenAI
# =========================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-nano
OPENAI_MODEL_LONG=gpt-4o-mini

# =========================
# Posting
# =========================
POST_STATUS=future
KEYWORDS_CSV=keywords.csv
SCHEDULE_KST_HOUR=9
TAGS=
EXISTING_CATEGORIES=뉴스,비공개,쇼핑,전체글,게시글,정보,취미
ALLOW_CREATE_TERMS=false

# =========================
# Ads
# =========================
AD_METHOD=shortcode
AD_SHORTCODE=[ads_top]
AD_INSERT_MIDDLE=true

# =========================
# Images
# =========================
IMAGE_SOURCE=openai        # openai | local
IMAGE_STYLE=photo          # photo | illustration | flat | 3d
NUM_IMAGES=1
IMAGE_SIZE=1024x1024       # API가 허용하는 값 (768 입력해도 코드가 API=1024로 보정 후 저장시 다운스케일)
IMAGE_QUALITY_WEBP=75
LOW_COST_MODE=true

# =========================
# Budget (under10)
# =========================
MAX_TOKENS_BODY=900
MONTHLY_BUDGET_USD=10
BUDGET_MARGIN=0.85
COST_PER_MTOKEN_NANO=0.02
COST_PER_MTOKEN_MINI=0.15
COST_PER_IMAGE_1024=0.04
COST_PER_IMAGE_768=0.03

# =========================
# Keyword Sources (optional)
# =========================
NEWSAPI_KEY=
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# =========================
# Paths
