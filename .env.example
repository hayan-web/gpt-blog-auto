# =========================
# WordPress
# =========================
WP_URL=
WP_USER=
WP_APP_PASSWORD=
# 자체서명 SSL일 때만 false
WP_TLS_VERIFY=true

# =========================
# OpenAI (일상글 2건 생성용)
# =========================
OPENAI_API_KEY=
# 모델 기본값 (비워두면 코드 기본값 사용)
OPENAI_MODEL=gpt-5-nano
OPENAI_MODEL_LONG=gpt-4o-mini
MAX_TOKENS_BODY=900

# =========================
# Coupang Partners
# =========================
COUPANG_ACCESS_KEY=
COUPANG_SECRET_KEY=
# 선택(없어도 동작): 채널/서브아이디 프리픽스
COUPANG_CHANNEL_ID=
COUPANG_SUBID_PREFIX=auto_wp_

# =========================
# Posting / Taxonomy
# =========================
# publish | future
POST_STATUS=future
KEYWORDS_CSV=keywords.csv
# 태그 기본값(일상글/쿠팡글 공통 보조)
TAGS=
# 존재하는 카테고리 목록(자동 생성 비활성일 때 여기 중에서만 사용)
EXISTING_CATEGORIES=뉴스,비공개,쇼핑,전체글,게시글,정보,취미
# 카테고리/태그 자동 생성 허용 여부
ALLOW_CREATE_TERMS=false

# =========================
# Affiliate Content (쿠팡글)
# =========================
PRODUCTS_SEED_CSV=products_seed.csv
DEFAULT_CATEGORY=정보
DEFAULT_TAGS=쿠팡,추천,리뷰
AFFILIATE_CATEGORY=쇼핑
AFFILIATE_TAGS=
# 예약 발행 시각(KST)
AFFILIATE_TIME_KST=13:00
# 대가성 문구(요청하신 문구)
DISCLOSURE_TEXT=이 포스팅은 쿠팡 파트너스 활동의 일환으로, 이에 따른 일정액의 수수료를 제공받습니다.

# =========================
# Flow switches (동작 모드)
# =========================
# 키워드 선택: random(기본) | rotate | first
KEYWORD_PICK_MODE=random
# 시드 선택: rank(기본) | shuffle(날짜 기반 섞기) | rotate(커서 순환)
SEED_PICK_MODE=rank
# 이미지 사용: off(기본) | hotlink | upload
USE_IMAGE=off
# CTA 버튼 문구(비우면 랜덤)
BUTTON_TEXT=
# true면 쿠팡 딥링크 실패/키없음 시 글 발행을 스킵
REQUIRE_COUPANG_API=false

# =========================
# Ads (본문 상단/중간 숏코드)
# =========================
AD_METHOD=shortcode
AD_SHORTCODE=[ads_top]
AD_INSERT_MIDDLE=true

# =========================
# Keywords Auto Update (update_keywords.py)
# =========================
NEWSAPI_KEY=
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=
KEYWORDS_K=10
# 금지 키워드(쉼표로 구분)
BAN_KEYWORDS=
BACKUP_OLD_KEYWORDS=true
USER_AGENT=gpt-blog-keywords/1.0

# =========================
# Quality / Network / Cache / Logs
# =========================
MIN_PER_KEYWORD=2
TIMEOUT_SEC=15
# soft | strict | off
URL_CHECK_MODE=soft

USAGE_DIR=.usage
CACHE_DIR=.cache
LLM_LOG_FILENAME=llm.log
CACHE_TTL_DEFAULT=86400
CACHE_MAX_FILES=500
CACHE_DISABLE=false

# =========================
# Debug
# =========================
# DRY_RUN=true 로 설정하면 실제 발행 대신 콘솔 출력만
DRY_RUN=
